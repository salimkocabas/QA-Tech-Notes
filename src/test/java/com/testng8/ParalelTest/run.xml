<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Search Engine Test" parallel="tests" thread-count="2">

	<!-- Suite level parameter -->
	<parameter name="URL" value="https://www.facebook.com" />

	<listeners>
		<listener class-name="com.testng8.ParalelTest.Listeners" />
	</listeners>


	<test name="Chrome">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.testng8.ParalelTest.test1" />
		</classes>
	</test> <!-- Test -->



	<test name="Firefox">
		<parameter name="browser" value="firefox" />
		<classes>
			<class name="com.testng8.ParalelTest.test1" />
		</classes>
	</test> <!-- Test -->





</suite> <!-- Suite -->
